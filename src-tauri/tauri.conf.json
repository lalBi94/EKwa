{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ekwa",
  "version": "0.1.0",
  "identifier": "com.ekwa.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EKwa - Traceur de courbe",
        "width": 1000,
        "height": 800,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}